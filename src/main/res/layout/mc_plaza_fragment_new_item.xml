            android:textSize="16.0sp" />

        <View
            android:layout_width="8.0dip"
            android:layout_height="13.0dip"
            android:layout_gravity="center"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/mc_forum_squre_arrow" />
    </LinearLayout>
</FrameLayout>