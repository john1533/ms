<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/topic_list_foruminfo_box"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mc_forum_bg3"
        android:visibility="gone">

        <ImageView
            android:id="@id/topic_list_foruminfo_boardicon"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@id/topic_list_foruminfo_boardname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_toRightOf="@id/topic_list_foruminfo_boardicon"
            android:includeFontPadding="false"
            android:text="板块"
            android:textColor="@color/mc_forum_text4_normal_color"
            android:textSize="@dimen/mc_forum_text_size_16" />

        <TextView
            android:id="@id/topic_list_foruminfo_boarddesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_list_foruminfo_boardname"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@id/topic_list_foruminfo_boardicon"
            android:includeFontPadding="false"
            android:text="描述描述描述描述"
            android:textColor="@color/mc_forum_text4_desc_normal_color"
            android:textSize="@dimen/mc_forum_text_size_14" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/topic_list_foruminfo_boarddesc"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_wire" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/topic_list_foruminfo_topbox1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mc_forum_bg3"
        android:visibility="gone">

        <ImageView
            android:id="@id/topic_list_foruminfo_icon1"
            android:layout_width="28.0dip"
            android:layout_height="18.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_ico67_n" />

        <TextView
            android:id="@id/topic_list_foruminfo_text1"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/topic_list_foruminfo_icon1"
            android:gravity="center_vertical"
            android:text="置顶1"
            android:textColor="@color/mc_forum_text4_desc_normal_color" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/topic_list_foruminfo_icon1"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_wire" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/topic_list_foruminfo_topbox2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mc_forum_bg3"
        android:visibility="gone">

        <ImageView
            android:id="@id/topic_list_foruminfo_icon2"
            android:layout_width="28.0dip"
            android:layout_height="18.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_ico67_n" />

        <TextView
            android:id="@id/topic_list_foruminfo_text2"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/topic_list_foruminfo_icon2"
            android:gravity="center_vertical"
            android:text="置顶2"
            android:textColor="@color/mc_forum_text4_desc_normal_color" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/topic_list_foruminfo_icon2"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_wire" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/topic_list_foruminfo_topbox3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mc_forum_bg3"
        android:visibility="gone">

        <ImageView
            android:id="@id/topic_list_foruminfo_icon3"
            android:layout_width="28.0dip"
            android:layout_height="18.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_ico67_n" />

        <TextView
            android:id="@id/topic_list_foruminfo_text3"
            android:layout_width="fill_parent"
            android:layout_height="38.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/topic_list_foruminfo_icon3"
            android:gravity="center_vertical"
            android:text="置顶3"
            android:textColor="@color/mc_forum_text4_desc_normal_color" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/topic_list_foruminfo_icon3"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/mc_forum_wire" />
    </RelativeLayout>

    <View
        android:id="@id/topic_list_foruminfo_marginview"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip" />
</LinearLayout>