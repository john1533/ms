<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="89.0dip"
    android:layout_marginTop="16.0dip"
    android:background="@drawable/mc_forum_bg3">

    <include layout="@layout/line_horizontal" />

    <com.mobcent.discuz.activity.view.MCHeadIcon
        android:id="@id/mc_forum_user_icon"
        android:layout_width="65.0dip"
        android:layout_height="65.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:background="@drawable/mc_forum_head"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@id/mc_forum_user_name"
        style="@style/mc_forum_user_name_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_toRightOf="@id/mc_forum_user_icon"
        android:shadowColor="@android:color/black"
        android:textColor="@android:color/black"
        android:textSize="@dimen/mc_forum_text_size_16" />

    <TextView
        android:id="@id/mc_forum_user_gender"
        android:layout_width="18.0dip"
        android:layout_height="18.0dip"
        android:layout_alignBottom="@id/mc_forum_user_name"
        android:layout_marginLeft="15.0dip"
        android:layout_toRightOf="@id/mc_forum_user_name"
        android:textColor="@color/mc_forum_text3_content_normal_color"
        android:textSize="@dimen/mc_forum_text_size_16" />

    <TextView
        android:id="@id/mc_froum_user_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mc_forum_user_name"
        android:layout_below="@id/mc_forum_user_name"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/mc_forum_text4_desc_normal_color"
        android:textSize="@dimen/mc_forum_text_size_14" />

    <TextView
        android:id="@id/mc_froum_user_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mc_froum_user_credits"
        android:layout_below="@id/mc_froum_user_credits"
        android:layout_marginTop="3.0dip"
        android:textColor="@color/mc_forum_user_level_color"
        android:textSize="@dimen/mc_forum_text_size_14" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mc_forum_wire" />
</RelativeLayout>