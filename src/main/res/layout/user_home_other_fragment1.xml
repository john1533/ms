<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mc_forum_bg1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/top_bar_widget"
        android:fadingEdge="none"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10.0dip">

            <include
                android:id="@id/head_box"
                layout="@layout/user_home_head_layout1" />

            <LinearLayout
                android:id="@id/mc_forum_box2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/head_box"
                android:layout_marginTop="21.0dip"
                android:background="@drawable/mc_forum_bg3"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@id/mc_forum_infomation_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/mc_forum_list_item2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="23.0dip"
                        android:layout_height="23.0dip"
                        android:layout_marginLeft="22.0dip"
                        android:src="@drawable/mc_forum_personal_icon3_n" />

                    <TextView
                        android:id="@id/mc_forum_datum_text"
                        style="@style/mc_forum_user_home_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_forum_he_datum" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />

                <LinearLayout
                    android:id="@id/mc_forum_photo_other_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/mc_forum_list_item2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="23.0dip"
                        android:layout_height="23.0dip"
                        android:layout_marginLeft="22.0dip"
                        android:src="@drawable/mc_forum_personal_icon7_n" />

                    <TextView
                        style="@style/mc_forum_user_home_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_forum_he_photo" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/mc_forum_box3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mc_forum_box2"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/mc_forum_bg3"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />

                <LinearLayout
                    android:id="@id/mc_forum_follow_other_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/mc_forum_list_item2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="23.0dip"
                        android:layout_height="23.0dip"
                        android:layout_marginLeft="22.0dip"
                        android:src="@drawable/mc_forum_personal_icon5_n" />

                    <TextView
                        style="@style/mc_forum_user_home_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_forum_he_follow" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />

                <LinearLayout
                    android:id="@id/mc_forum_fan_other_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/mc_forum_list_item2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="23.0dip"
                        android:layout_height="23.0dip"
                        android:layout_marginLeft="22.0dip"
                        android:src="@drawable/mc_forum_personal_icon15_n" />

                    <TextView
                        style="@style/mc_forum_user_home_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_forum_he_fans" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/mc_forum_box4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mc_forum_box3"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/mc_forum_bg3"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />

                <LinearLayout
                    android:id="@id/mc_forum_publish_other_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/mc_forum_list_item2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="23.0dip"
                        android:layout_height="23.0dip"
                        android:layout_marginLeft="22.0dip"
                        android:src="@drawable/mc_forum_personal_icon8_n" />

                    <TextView
                        style="@style/mc_forum_user_home_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_forum_he_publish" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />

                <LinearLayout
                    android:id="@id/mc_forum_reply_other_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@drawable/mc_forum_list_item2"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="23.0dip"
                        android:layout_height="23.0dip"
                        android:layout_marginLeft="22.0dip"
                        android:src="@drawable/mc_forum_personal_icon9_n" />

                    <TextView
                        style="@style/mc_forum_user_home_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mc_forum_he_reply" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/mc_forum_wire" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@id/top_bar_widget"
        layout="@layout/user_home_top_bar1" />

    <include
        android:id="@id/bottom_layout"
        layout="@layout/user_home_other_fragment_bottom" />
</RelativeLayout>