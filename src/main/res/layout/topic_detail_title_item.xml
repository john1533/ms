            />

        <ImageView
            android:id="@id/poll_img"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/mc_forum_vote"
            android:visibility="gone" />
    </LinearLayout>



    <RelativeLayout
        android:id="@id/posts_type_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        >
        <ImageView
            android:id="@id/top_img"
            android:layout_width="24.0dip"
            android:layout_height="22.0dip"
            android:src="@drawable/mc_forum_detail12_ding2"
            android:visibility="gone"
            />

        <ImageView
            android:id="@id/essence_img"
            android:layout_width="24.0dip"
            android:layout_height="22.0dip"
            android:layout_toRightOf="@id/top_img"
            android:src="@drawable/mc_forum_detail12_jing2"
            android:visibility="gone"
            />
    </RelativeLayout>

